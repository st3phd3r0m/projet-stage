{% extends 'base-admin.html.twig' %}

{% block title %}Ludo et Sophie - Index des groupes d'attributs
{% endblock %}

{% block body %}
	<!-- Content Header (Page header) -->
	<div class="content-header">
		<div class="container-fluid">
			<div class="row mb-2">
				<div class="col-sm-6">
					<h1 class="m-0 text-dark">Ludo et Sophie - Index des groupes d'attributs</h1>
				</div>
				<!-- /.col -->
				<div class="col-sm-6">
					<ol class="breadcrumb float-sm-right">
						<li class="breadcrumb-item">
							<a href="{{ path('admin') }}">Dashboard</a>
						</li>
						<li class="breadcrumb-item active">Groupes d'attributs</li>
					</ol>
				</div>
				<!-- /.col -->
			</div>
			<!-- /.row -->
		</div>
		<!-- /.container-fluid -->
	</div>
	<!-- /.content-header -->

	<!-- Main content -->
	<div class="content">
		<div class="container-fluid">

			{% for message in app.flashes('success') %}
				<div class="alert alert-success" role="alert">{{ message }}</div>
			{% endfor %}

			<a href="{{ path('attribute_groups_new') }}" class="btn btn-success my-5" >Créer nouveau groupe d'attributs</a>
			
			<table class="table">
				<thead>
					<tr>
						<th>
							{{ knp_pagination_sortable(attribute_groups, 'Nom', 'name') }}
						</th>
						<th>
							{{ knp_pagination_sortable(attribute_groups, 'Nombre d\'attributs associés', 'attributes.count' ) }}
						</th>
						<th>actions</th>
					</tr>
				</thead>
				<tbody>
					{% for attribute_group in attribute_groups %}
						<tr>
							<td>{{ attribute_group.name }}</td>
							<td>{{ attribute_group.attributes | length }}
								{% if attribute_group.attributes | length > 0 %}
									<a title="Voir les attributs appartenants à ce groupe" href="{{ path('attributes_index', {attributeGroupId:attribute_group.id}) }}" class="btn btn-primary" >Voir</a>
								{% endif %}
							</td>
							<td>
								<a href="{{ path('attribute_groups_edit', {'id': attribute_group.id}) }}" class="btn btn-warning" >Modifier</a>
								{{ include('attribute_groups/_delete_form.html.twig') }}
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="2">Aucun groupe d'attributs</td>
						</tr>
					{% endfor %}
				</tbody>
				<div>
					{{ knp_pagination_render(attribute_groups) }}
				</div>
			</table>
			<div>
				{{ knp_pagination_render(attribute_groups) }}
			</div>

			<a href="{{ path('attribute_groups_new') }}" class="btn btn-success my-5" >Créer nouveau groupe d'attributs</a>

		</div>
	</div>
{% endblock %}
