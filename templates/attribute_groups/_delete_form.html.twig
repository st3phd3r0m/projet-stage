<!-- Button trigger modal -->
<button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleteAttributeGroup{{ attribute_group.id }}ModalCenter">
   <i class="fas fa-trash"></i>
</button>

<!-- Modal -->
<div class="modal fade" id="deleteAttributeGroup{{ attribute_group.id }}ModalCenter" tabindex="-1" role="dialog" aria-labelledby="deleteAttributeGroup{{ attribute_group.id }}ModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteAttributeGroup{{ attribute_group.id }}ModalLongTitle">Suppression du groupe d'attributs <span class="font-italic">"{{ attribute_group.name }}"</span></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                La suppression du groupe d'attributs <span class="font-italic">"{{ attribute_group.name }}"</span> sera irr√©versible.
                Voulez-vous vraiment supprimer ce groupe d'attributs ?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                <form method="post" action="{{ path('attribute_groups_delete', {'id': attribute_group.id}) }}">
                    <input type="hidden" name="_method" value="DELETE">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ attribute_group.id) }}">
                    <button class="btn btn-danger">Supprimer</button>
                </form>
            </div>
        </div>
    </div>
</div>