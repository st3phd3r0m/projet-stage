{% extends 'base.html.twig' %}

{% block title %}Categories index{% endblock %}

{% block body %}
    <h1>Categories index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Keywords</th>
                <th>Meta_tag_title</th>
                <th>Meta_tag_description</th>
                <th>Meta_tag_keywords</th>
                <th>Image</th>
                <th>Slug</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.title }}</td>
                <td>{{ category.description }}</td>
                <td>{{ category.keywords ? category.keywords|json_encode : '' }}</td>
                <td>{{ category.metaTagTitle }}</td>
                <td>{{ category.metaTagDescription }}</td>
                <td>{{ category.metaTagKeywords ? category.metaTagKeywords|json_encode : '' }}</td>
                <td>{{ category.image ? category.image|json_encode : '' }}</td>
                <td>{{ category.slug }}</td>
                <td>
                    <a href="{{ path('categories_show', {'id': category.id}) }}">show</a>
                    <a href="{{ path('categories_edit', {'id': category.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('categories_new') }}">Create new</a>
{% endblock %}
