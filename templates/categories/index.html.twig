{% extends 'base-admin.html.twig' %}

{% block title %}Ludo et Sophie - Index des catégories{% endblock %}

{% block body %}
	<!-- Content Header (Page header) -->
	<div class="content-header">
		<div class="container-fluid">
			<div class="row mb-2">
				<div class="col-sm-6">
					<h1 class="m-0 text-dark">Ludo et Sophie - Index des catégories</h1>
				</div>
				<!-- /.col -->
				<div class="col-sm-6">
					<ol class="breadcrumb float-sm-right">
						<li class="breadcrumb-item">
							<a href="{{ path('admin') }}">Dashboard</a>
						</li>
						<li class="breadcrumb-item active">Catégories</li>
					</ol>
				</div>
				<!-- /.col -->
			</div>
			<!-- /.row -->
		</div>
		<!-- /.container-fluid -->
	</div>
	<!-- /.content-header -->

	<!-- Main content -->
	<div class="content">
		<div class="container-fluid">

			<table class="table">
				<thead>
					<tr>
						<th>Id</th>
						<th>Titre</th>
						<th>Description</th>
						<th>Mots-clés</th>
						<th>Titre en méta donnée</th>
						<th>Description en méta donnée</th>
						<th>Mots-clés en méta donnée</th>
						<th>Image</th>
						<th>Slug</th>
						<th>actions</th>
					</tr>
				</thead>
				<tbody>
					{% for category in categories %}
						<tr>
							<td>{{ category.id }}</td>
							<td>{{ category.title }}</td>
							<td>{{ category.description }}</td>
							<td>{{ category.keywords ? category.keywords|json_encode : '' }}</td>
							<td>{{ category.metaTagTitle }}</td>
							<td>{{ category.metaTagDescription }}</td>
							<td>{{ category.metaTagKeywords ? category.metaTagKeywords|json_encode : '' }}</td>
							<td>{{ category.image ? category.image|json_encode : '' }}</td>
							<td>{{ category.slug }}</td>
							<td>
								<a href="{{ path('categories_show', {'id': category.id}) }}">Voir</a>
								<a href="{{ path('categories_edit', {'id': category.id}) }}">Modifier</a>
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="10">Aucune catégorie</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>

			<a href="{{ path('categories_new') }}">Créer nouvelle catégorie</a>

		</div>
	</div>
{% endblock %}
