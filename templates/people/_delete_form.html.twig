<!-- Button trigger modal -->
<button class="btn btn-danger" data-toggle="modal" data-target="#deletePeople{{ person.id }}ModalCenter">
  <i class="fas fa-trash"></i>
</button>

<!-- Modal -->
<div class="modal fade" id="deletePeople{{ person.id }}ModalCenter" tabindex="-1" role="dialog" aria-labelledby="deletePeople{{ person.id }}ModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deletePeople{{ person.id }}ModalLongTitle">Suppression du collaborateur <span class="font-italic">{{ person.name }}</span></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                La suppression du collaborateur <span class="font-italic">{{ person.name }}</span> sera irr√©versible.
                Voulez-vous vraiment supprimer ce collaborateur ?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                <form method="post" action="{{ path('people_delete', {'id': person.id}) }}">
                    <input type="hidden" name="_method" value="DELETE">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ person.id) }}">
                    <button class="btn btn-danger">Supprimer</button>
                </form>
            </div>
        </div>
    </div>
</div>