{% extends 'base-admin.html.twig' %}

{% block title %}Ludo et Sophie - Index des publications
{% endblock %}

{% block body %}
	<!-- Content Header (Page header) -->
	<div class="content-header">
		<div class="container-fluid">
			<div class="row mb-2">
				<div class="col-sm-6">
					<h1 class="m-0 text-dark">Ludo et Sophie - Index des publications</h1>
				</div>
				<!-- /.col -->
				<div class="col-sm-6">
					<ol class="breadcrumb float-sm-right">
						<li class="breadcrumb-item">
							<a href="{{ path('admin') }}">Dashboard</a>
						</li>
						<li class="breadcrumb-item active">Publications</li>
					</ol>
				</div>
				<!-- /.col -->
			</div>
			<!-- /.row -->
		</div>
		<!-- /.container-fluid -->
	</div>
	<!-- /.content-header -->

	<!-- Main content -->
	<div class="content">
		<div class="container-fluid">

			{% for message in app.flashes('success') %}
				<div class="alert alert-success" role="alert">{{ message }}</div>
			{% endfor %}

			{% for message in app.flashes('fail') %}
				<div class="alert alert-warning" role="alert">{{ message }}</div>
			{% endfor %}

			<table class="table">
				<thead>
					<tr>
						<th>
							{{ knp_pagination_sortable(pages, 'Titre', 'title') }}
						</th>
						<th>
							{{ knp_pagination_sortable(pages, 'Créée le', 'created_at') }}
						</th>
						<th>
							{{ knp_pagination_sortable(pages, 'Modifiée le', 'updated_at') }}

						</th>
						<th>
							{{ knp_pagination_sortable(pages, 'Auteur', 'user.lastname') }}
						</th>
						<th>actions</th>
					</tr>
				</thead>
				<tbody>
					{% for page in pages %}
						<tr>
							<td>{{ page.title }}</td>
							<td>{{ page.createdAt ? page.createdAt|date('d-m-Y H:i:s') : '' }}</td>
							<td>{{ page.updatedAt ? page.updatedAt|date('d-m-Y H:i:s') : '' }}</td>
							<td>{{ page.user.firstname }}
								{{ page.user.lastname }}</td>
							<td>
								<a href="{{ path('pages_show', {'id': page.id}) }}">Voir</a>
								<a href="{{ path('pages_edit', {'id': page.id}) }}">Modifier</a>
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="5">Aucune publication</td>
						</tr>
					{% endfor %}
				</tbody>
				<div>
					{{ knp_pagination_render(pages) }}
				</div>
			</table>
			<div>
				{{ knp_pagination_render(pages) }}
			</div>

			<a href="{{ path('pages_new') }}">Créer nouvelle publication</a>
		</div>
	</div>
{% endblock %}
