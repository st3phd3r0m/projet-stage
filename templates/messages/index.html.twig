{% extends 'base-admin.html.twig' %}

{% block title %}Ludo et Sophie - Index des messages
{% endblock %}

{% block body %}
	<!-- Content Header (Page header) -->
	<div class="content-header">
		<div class="container-fluid">
			<div class="row mb-2">
				<div class="col-sm-6">
					<h1 class="m-0 text-dark">Ludo et Sophie - Index des messages</h1>
				</div>
				<!-- /.col -->
				<div class="col-sm-6">
					<ol class="breadcrumb float-sm-right">
						<li class="breadcrumb-item">
							<a href="{{ path('admin') }}">Dashboard</a>
						</li>
						<li class="breadcrumb-item active">Messages</li>
					</ol>
				</div>
				<!-- /.col -->
			</div>
			<!-- /.row -->
		</div>
		<!-- /.container-fluid -->
	</div>
	<!-- /.content-header -->

	<!-- Main content -->
	<div class="content">
		<div class="container-fluid">

			<table class="table">
				<thead>
					<tr>
						<th>
							{{ knp_pagination_sortable(messages, 'Adresse email', 'email') }}
						</th>
						<th>
							{{ knp_pagination_sortable(messages, 'Nom', 'name') }}
						</th>
						<th>
							{{ knp_pagination_sortable(messages, 'Objet', 'subject') }}						
						</th>
						<th>
							{{ knp_pagination_sortable(messages, 'Concernant la sortie', 'product') }}	
						</th>
						<th>
							{{ knp_pagination_sortable(messages, 'Envoyé le', 'sentAt') }}
						</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					{% for message in messages %}
						<tr>
							<td>{{ message.email }}</td>
							<td>{{ message.name }}</td>
							<td>{{ message.subject }}</td>
							<td>
								{% if message.product != null %}
									<a title="Voir la sortie associée" href="{{ path('products_show', {id:message.product.id}) }}">{{ message.product.title }}</a>
								{% else %}
									associé à aucune sortie
								{% endif %}
							</td>
							<td>{{ message.sentAt | date('d.m.Y H:i:s') }}</td>
							<td>
								<a href="{{ path('messages_show', {'id': message.id}) }}">Lire</a>
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="4">Aucun message</td>
						</tr>
					{% endfor %}
				</tbody>
				<div>
					{{ knp_pagination_render(messages) }}
				</div>
			</table>
			<div>
				{{ knp_pagination_render(messages) }}
			</div>

		</div>
	</div>
{% endblock %}
