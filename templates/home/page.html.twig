{% extends 'base.html.twig' %}

{% block head %}
{# Facebook #}
<meta property="og:title" content="{{ page.metaTagTitle ?? '' }}">
<meta property="og:description" content="{{ page.metaTagDescription ?? '' }}">
<meta property="og:url" content="{{ url(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')) }}">
<meta property="og:type" content="article">
{# Fin Facebook #}

{# Twitter #}
<meta property="twitter:title" content="{{ page.metaTagTitle ?? '' }}">
<meta property="twitter:description" content="{{ page.metaTagDescription ?? '' }}">
<meta property="twitter:url" content="{{ url(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')) }}">
{# Fin Twitter #}

<meta name="description" content="{{ page.metaTagDescription ?? '' }}">
{% endblock %}

{% block title %}	
	{# {% for metaTagKeyword in page.metaTagKeywords %}
		{{ metaTagKeyword }} -
	{% endfor %} #}
	{{ page.metaTagTitle ?? '' }} -
	Ludo et Sophie
{% endblock %}

{% block body %}
	<article>
		<h2 class="blue text-center my-5">{{ page.title ?? '' }}</h2>
		<div class="container">

			<div>
				{{ ( page.content ?? '')|raw }}
			</div>

			{% if page.keywords is defined %}
				<p class="my-5 ml-5">
					{% for keyWords in page.keywords %}
						#
						<strong>{{ keyWords }}</strong>
					{% endfor %}
				</p>
			{% endif %}
		</div>
	</article>
{% endblock %}
