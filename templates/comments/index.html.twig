{% extends 'base-admin.html.twig' %}

{% block title %}Ludo et Sophie - Index des avis clients
{% endblock %}

{% block body %}
	<!-- Content Header (Page header) -->
	<div class="content-header">
		<div class="container-fluid">
			<div class="row mb-2">
				<div class="col-sm-6">
					<h1 class="m-0 text-dark">Ludo et Sophie - Index des avis clients</h1>
				</div>
				<!-- /.col -->
				<div class="col-sm-6">
					<ol class="breadcrumb float-sm-right">
						<li class="breadcrumb-item">
							<a href="{{ path('admin') }}">Dashboard</a>
						</li>
						<li class="breadcrumb-item active">Avis clients</li>
					</ol>
				</div>
				<!-- /.col -->
			</div>
			<!-- /.row -->
		</div>
		<!-- /.container-fluid -->
	</div>
	<!-- /.content-header -->

	<!-- Main content -->
	<div class="content">
		<div class="container-fluid">

			<table class="table">
				<thead>
					<tr>
						<th>
							{{ knp_pagination_sortable(comments, 'Ecrit par', 'pseudo') }}
						</th>
						<th>
							{{ knp_pagination_sortable(comments, 'Contenu', 'content') }}
						</th>
						<th>
							{{ knp_pagination_sortable(comments, 'Concernant la sortie', 'product.title') }}
						</th>
						<th>
							{{ knp_pagination_sortable(comments, 'Date', 'created_at') }}
						</th>
						<th>actions</th>
					</tr>
				</thead>
				<tbody>
					{% for comment in comments %}
						<tr>
							<td>{{ comment.pseudo }}</td>
							<td>{{ comment.content }}</td>
							<td>
								<a title="Voir la sortie associée" href="{{ path('products_show', {id:comment.product.id}) }}">{{ comment.product.title }}</a>
							</td>
							<td>{{ comment.createdAt|date('d-m-Y H:i:s') }}</td>
							<td>
								<a href="{{ path('comments_show', {'id': comment.id}) }}">Voir</a>
								<a href="{{ path('comments_edit', {'id': comment.id}) }}">Modérer</a>
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="4">Aucun avis client</td>
						</tr>
					{% endfor %}
				</tbody>
				<div>
					{{ knp_pagination_render(comments) }}
				</div>
			</table>
			<div>
				{{ knp_pagination_render(comments) }}
			</div>
		</div>
	</div>
{% endblock %}
