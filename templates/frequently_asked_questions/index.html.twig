{% extends 'base-admin.html.twig' %}

{% block title %}Ludo et Sophie - Index FAQ
{% endblock %}

{% block body %}
	<!-- Content Header (Page header) -->
	<div class="content-header">
		<div class="container-fluid">
			<div class="row mb-2">
				<div class="col-sm-6">
					<h1 class="m-0 text-dark">Ludo et Sophie - Index FAQ</h1>
				</div>
				<!-- /.col -->
				<div class="col-sm-6">
					<ol class="breadcrumb float-sm-right">
						<li class="breadcrumb-item">
							<a href="{{ path('admin') }}">Dashboard</a>
						</li>
						<li class="breadcrumb-item active">FAQ</li>
					</ol>
				</div>
				<!-- /.col -->
			</div>
			<!-- /.row -->
		</div>
		<!-- /.container-fluid -->
	</div>
	<!-- /.content-header -->

	<!-- Main content -->
	<div class="content">
		<div class="container-fluid">

			{% for message in app.flashes('success') %}
				<div class="alert alert-success" role="alert">{{ message }}</div>
			{% endfor %}

			{% for message in app.flashes('fail') %}
				<div class="alert alert-warning" role="alert">{{ message }}</div>
			{% endfor %}

			<a href="{{ path('frequently_asked_questions_new') }}" class="btn btn-success my-5">Créer nouvelle question-réponse</a>

			<table class="table">
				<thead>
					<tr>
						<th>
							{{ knp_pagination_sortable(frequently_asked_questions, 'Question', 'question') }}
						</th>
						<th class="d-none d-md-table-cell">
							{{ knp_pagination_sortable(frequently_asked_questions, 'Réponse', 'answer') }}
						</th>
						<th>actions</th>
					</tr>
				</thead>
				<tbody>
					{% for frequently_asked_question in frequently_asked_questions %}
						<tr>
							<td>{{ frequently_asked_question.question }}</td>
							<td class="d-none d-md-table-cell">{{ frequently_asked_question.answer }}</td>
							<td>
								<a href="{{ path('frequently_asked_questions_edit', {'id': frequently_asked_question.id}) }}" class="btn btn-warning" ><i class="fas fa-edit"></i></a>
                                {{ include('frequently_asked_questions/_delete_form.html.twig') }}
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="4">FAQ vide</td>
						</tr>
					{% endfor %}
				</tbody>
				<div>
					{{ knp_pagination_render(frequently_asked_questions) }}
				</div>
			</table>
			<div>
				{{ knp_pagination_render(frequently_asked_questions) }}
			</div>

			<a href="{{ path('frequently_asked_questions_new') }}" class="btn btn-success my-5">Créer nouvelle question-réponse</a>

		</div>
	</div>
{% endblock %}
