{% extends 'base-admin.html.twig' %}

{% block title %}Ludo et Sophie - Index des liens
{% endblock %}

{% block body %}
<!-- Content Header (Page header) -->
<div class="content-header">
	<div class="container-fluid">
		<div class="row mb-2">
			<div class="col-sm-6">
				<h1 class="m-0 text-dark">Ludo et Sophie - Index des liens</h1>
			</div>
			<!-- /.col -->
			<div class="col-sm-6">
				<ol class="breadcrumb float-sm-right">
					<li class="breadcrumb-item">
						<a href="{{ path('admin') }}">Dashboard</a>
					</li>
					<li class="breadcrumb-item active">Liens</li>
				</ol>
			</div>
			<!-- /.col -->
		</div>
		<!-- /.row -->
	</div>
	<!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<!-- Main content -->
<div class="content">
	<div class="container-fluid">

		{% for message in app.flashes('success') %}
			<div class="alert alert-success" role="alert">{{ message }}</div>
		{% endfor %}

		{% for message in app.flashes('fail') %}
			<div class="alert alert-warning" role="alert">{{ message }}</div>
		{% endfor %}


		<a href="{{ path('links_new') }}" class="btn btn-success my-5" >Créer nouveau lien</a>

        <table class="table">
            <thead>
                <tr>
                    <th>
                        {{ knp_pagination_sortable(links, 'Url', 'url') }}
                    </th>
                    <th>
                        {{ knp_pagination_sortable(links, 'Position', 'position') }}
                    </th>
                    <th>
                        {{ knp_pagination_sortable(links, 'Titre', 'title') }}                   
                    </th>
                    <th>
                        {{ knp_pagination_sortable(links, 'Contenu', 'content') }}       
                    </th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for link in links %}
                <tr>
                    <td>{{ link.url }}</td>
                    <td>{{ link.position }}</td>
                    <td>{{ link.title }}</td>
                    <td>{{ link.content|raw }}</td>
                    <td>
                    	<a href="{{ path('links_show', {'id': link.id}) }}" class="btn btn-primary" ><i class="fas fa-glasses"></i></a>
						<a href="{{ path('links_edit', {'id': link.id}) }}" class="btn btn-warning" ><i class="fas fa-edit"></i></a>
                        {{ include('links/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">Aucun lien enregistré</td>
                </tr>
            {% endfor %}
            </tbody>

			<div>
				{{ knp_pagination_render(links) }}
			</div>
		</table>
		<div>
			{{ knp_pagination_render(links) }}
		</div>

		<a href="{{ path('links_new') }}" class="btn btn-success my-5" >Créer nouveau lien</a>
    </div>
</div>    
{% endblock %}
