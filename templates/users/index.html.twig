{% extends 'base-admin.html.twig' %}

{% block title %}Ludo et Sophie - Index des utilisateurs
{% endblock %}

{% block body %}
	<!-- Content Header (Page header) -->
	<div class="content-header">
		<div class="container-fluid">
			<div class="row mb-2">
				<div class="col-sm-6">
					<h1 class="m-0 text-dark">Ludo et Sophie - Index des utilisateurs</h1>
				</div>
				<!-- /.col -->
				<div class="col-sm-6">
					<ol class="breadcrumb float-sm-right">
						<li class="breadcrumb-item">
							<a href="{{ path('admin') }}">Dashboard</a>
						</li>
						<li class="breadcrumb-item active">Utilisateurs</li>
					</ol>
				</div>
				<!-- /.col -->
			</div>
			<!-- /.row -->
		</div>
		<!-- /.container-fluid -->
	</div>
	<!-- /.content-header -->

	<!-- Main content -->
	<div class="content">
		<div class="container-fluid">

			<table class="table">
				<thead>
					<tr>
						<th>
							{{ knp_pagination_sortable(users, 'Email', 'email') }}
						</th>
						<th>
							{{ knp_pagination_sortable(users, 'Prénom', 'firstname') }}
						</th>
						<th>
							{{ knp_pagination_sortable(users, 'Nom', 'lastname') }}
						</th>
						<th>
							{{ knp_pagination_sortable(users, 'Roles', 'roles') }}
						</th>
						<th>
							{{ knp_pagination_sortable(users, 'Nombre de publications', 'pages.count' ) }}
						</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					{% for user in users %}
						<tr>
							<td>{{ user.email }}</td>
							<td>{{ user.firstname }}</td>
							<td>{{ user.lastname }}</td>
							<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
							<td>
								{{ user.pages|length }}
								<a title="Voir les {{ user.pages|length }} publications de {{ user.firstname }}" href="{{ path('pages_index', {userId: user.id }) }}">Voir</a>
							</td>
							<td>
								<a href="{{ path('users_show', {'id': user.id}) }}">Voir</a>
								<a href="{{ path('users_edit', {'id': user.id}) }}">Modifier</a>
								{{ include('users/_delete_form.html.twig') }}
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="5">Aucun utilisateur</td>
						</tr>
					{% endfor %}
				</tbody>
				<div>
					{{ knp_pagination_render(users) }}
				</div>
			</table>
			<div>
				{{ knp_pagination_render(users) }}
			</div>

			<a href="{{ path('users_new') }}">Créer nouvel utilisateur</a>
		</div>
	</div>
{% endblock %}
