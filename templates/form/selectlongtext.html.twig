{% block selectlongtext_widget %}
	<div class="form-group d-block">
		<div class="row">
			<div class="col-6">
				<p>Saisissez une nouvelle valeur :</p>
				<textarea {{ block("widget_attributes") }} list="{{ id }}_list" value="{{ form.vars.value }}" class="form-control"></textarea>
			</div>
			<div class="col-6">
				<p>Ou sélectionnez dans la base de données :</p>
				<select id="{{ id }}_list" class="form-control">
					<option value=""></option>
				</select>
			</div>
		</div>
	</div>
{% endblock %}
