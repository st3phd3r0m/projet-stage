{% extends 'base-admin.html.twig' %}

{% block title %}Timothy et Timothé - Index des langues de publication des ***REMOVED***
{% endblock %}

{% block body %}
	<!-- Content Header (Page header) -->
	<div class="content-header">
		<div class="container-fluid">
			<div class="row mb-2">
				<div class="col-sm-6">
					<h1 class="m-0 text-dark">Timothy et Timothé - Index des langues de publication des ***REMOVED***</h1>
				</div>
				<!-- /.col -->
				<div class="col-sm-6">
					<ol class="breadcrumb float-sm-right">
						<li class="breadcrumb-item">
							<a href="{{ path('admin') }}">Dashboard</a>
						</li>
						<li class="breadcrumb-item active">Langues de publication des ***REMOVED***</li>
					</ol>
				</div>
				<!-- /.col -->
			</div>
			<!-- /.row -->
		</div>
		<!-- /.container-fluid -->
	</div>
	<!-- /.content-header -->

	<!-- Main content -->
	<div class="content">
		<div class="container-fluid">
		
			{% for message in app.flashes('success') %}
				<div class="alert alert-success" role="alert">{{ message }}</div>
			{% endfor %}

			{% for message in app.flashes('fail') %}
				<div class="alert alert-warning" role="alert">{{ message }}</div>
			{% endfor %}

			<a href="{{ path('languages_new') }}" class="btn btn-success my-5"><i class="fas fa-plus"></i> Ajouter langue de publication des ***REMOVED***</a>

			<table class="table">
				<thead>
					<tr>
						<th class="d-none d-sm-table-cell">Nom</th>
						<th>Flag</th>
						<th class="d-none d-md-table-cell">Slug</th>
						<th>actions</th>
					</tr>
				</thead>
				<tbody>
					{% for language in languages %}
						<tr>
							<td class="d-none d-sm-table-cell">{{ language.name }}</td>
							<td>
								<img src="{{ asset('images/languages/'~ language.flag ) | imagine_filter('miniatures') }}" alt="Drapeau associé à la langue {{ language.name }}">
							</td>
							<td class="d-none d-md-table-cell">{{ (language.slug)?? language.slug }}</td>
							<td>
								<a href="{{ path('languages_edit', {'id': language.id}) }}" class="btn btn-warning"><i class="fas fa-edit"></i></a>
								{{ include('languages/_delete_form.html.twig') }}
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="4">Aucune langue</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>

			<a href="{{ path('languages_new') }}" class="btn btn-success my-5"><i class="fas fa-plus"></i> Ajouter langue de publication des ***REMOVED***</a>
		</div>
	</div>
{% endblock %}
