<!-- Button trigger modal -->
<button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleteAttribute{{ attribute.id }}ModalCenter">
   <i class="fas fa-trash"></i>
</button>

<!-- Modal -->
<div class="modal fade" id="deleteAttribute{{ attribute.id }}ModalCenter" tabindex="-1" role="dialog" aria-labelledby="deleteAttribute{{ attribute.id }}ModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteAttribute{{ attribute.id }}ModalLongTitle">Suppression de l'attribut <span class="font-italic">"{{ attribute.name }}->{{ attribute.value }}"</span></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                La suppression de l'attribut <span class="font-italic">"{{ attribute.name }}->{{ attribute.value }}"</span> sera irr√©versible.
                Voulez-vous vraiment supprimer cet attribut ?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                <form method="post" action="{{ path('attributes_delete', {'id': attribute.id}) }}">
                    <input type="hidden" name="_method" value="DELETE">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ attribute.id) }}">
                    <button class="btn btn-danger">Supprimer</button>
                </form>
            </div>
        </div>
    </div>
</div>