{% extends 'base-admin.html.twig' %}

{% block title %}Ludo et Sophie - Index des attributs
{% endblock %}

{% block body %}
	<!-- Content Header (Page header) -->
	<div class="content-header">
		<div class="container-fluid">
			<div class="row mb-2">
				<div class="col-sm-6">
					<h1 class="m-0 text-dark">Ludo et Sophie - Index des attributs</h1>
				</div>
				<!-- /.col -->
				<div class="col-sm-6">
					<ol class="breadcrumb float-sm-right">
						<li class="breadcrumb-item">
							<a href="{{ path('admin') }}">Dashboard</a>
						</li>
						<li class="breadcrumb-item active">Attributs</li>
					</ol>
				</div>
				<!-- /.col -->
			</div>
			<!-- /.row -->
		</div>
		<!-- /.container-fluid -->
	</div>
	<!-- /.content-header -->

	<!-- Main content -->
	<div class="content">
		<div class="container-fluid">

			{% for message in app.flashes('success') %}
				<div class="alert alert-success" role="alert">{{ message }}</div>
			{% endfor %}

			<table class="table">
				<thead>
					<tr>
						<th>
							{{ knp_pagination_sortable(attributes, 'Nom', 'name') }}
						</th>
						<th>
							Groupe d'attributs
						</th>
						<th>
							{{ knp_pagination_sortable(attributes, 'Contenu', 'value') }}
						</th>
						<th>actions</th>
					</tr>
				</thead>
				<tbody>
					{% for attribute in attributes %}
						<tr>
							<td>
								{# Déoncaténation du groupe d'attribut avec le nom de l'attribut #}
								{# {% set attrname = attribute.name|split('->') %}
								{{ attrname[1] }} #}
								{{ attribute.name }}
							</td>
							<td>{{ attribute.attributeGroup.name }}</td>
							<td>{{ attribute.value }}</td>
							<td>
								<a href="{{ path('attributes_edit', {'id': attribute.id}) }}">Modifier</a>
								{{ include('attributes/_delete_form.html.twig') }}
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="4">Aucun attribut</td>
						</tr>
					{% endfor %}
				</tbody>
				<div>
					{{ knp_pagination_render(attributes) }}
				</div>
			</table>
			<div>
				{{ knp_pagination_render(attributes) }}
			</div>

			<a href="{{ path('attributes_new') }}">Créer nouvel attribut</a>


		</div>
	</div>
{% endblock %}
